<h1><%= @user.name %></h1>

<div>
    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <th>Complete/Incomplete</th>
                <th>Expand List</th>
            </tr>
            <% @user.lists.each do |list| %>
                <tr>
                    <td><%= list.title %></td>
                <% if list.list_complete? %>
                    <td>Complete</td>
                <% else %>
                    <td>Incomplete</td>
                <% end %>
                    <td><%= link_to "Expand #{list.title}", user_list_path(list) %></td>
            <% end %>
            </tr>
        </tbody>
    </table>
    <p><%= link_to "New List", new_user_list_path %></p>
</div>