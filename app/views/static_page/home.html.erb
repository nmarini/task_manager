<div class="centered">
    <% if current_user %>
        <h1>Hello <%= current_user.name %>!</h1>
     
        <table class="table">
        <tbody>
            <tr>
                <th>Lists</th>
                <th>Complete/Incomplete</th>
                <th>Expand List</th>
            </tr>
            <% @lists.each do |list| %>
                <tr>
                    <td><%= list.title %></td>
                <% if list.list_complete? %>
                    <td class="text-success">Complete</td>
                <% else %>
                    <td class="text-danger">Incomplete</td>
                <% end %>
                <td><%= link_to "Expand #{list.title}", list_path(list) %></td>
            <% end %>
            </tr>
        </tbody>
    </table>

        
        <p><%= link_to "Log Out", logout_path %></p>
    <% else %>
        <div>    
            <h1>Welcome to Task Manager!</h1>
            
            <p>We are here to help you organize your work-life.</p>
            
            <p>Please signup or login below... </p>
        </div>
        <p><%= link_to "Sign Up", signup_path %></p>
        <p><%= link_to "Log In", login_path %></p>
        <p><%= link_to('Log in with Facebook!', '/auth/facebook') %></p>
    <% end %>
</div>

